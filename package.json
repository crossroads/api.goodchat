{
  "name": "api.goodchat",
  "version": "1.0.0",
  "description": "omnichannel chat solution built for structured integrations with transactional systems",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -p .",
    "postbuild": "npm run copy:assets",
    "start": "DEBUG=*:info,*:error,*:verbose,*:panic,*:shout node dist/bin/serve.js",
    "dev": "DEBUG=*:info,*:error,*:verbose,*:panic,*:shout dotenv -e .env.development ts-node-dev bin/serve.ts",
    "test": "DEBUG=-* dotenv -e .env.test -- mocha -r ts-node/register --file specs/spec_helpers/setup.ts 'specs/**/*.spec.ts'",
    "test:fast": "npm run test -- --bail",
    "test:coverage": "nyc npm run test",
    "coverage:json": "nyc report --reporter=json",
    "coverage:html": "nyc report --reporter=html",
    "copy:assets": "cp -r locales ./dist",
    "clean": "rm -rf dist",
    "document": "typedoc --includeVersion",
    "doctoc": "doctoc README.md",
    "postinstall": "npm run prisma:generate",
    "prisma:generate": "prisma generate",
    "db:migrate:new": "prisma migrate dev --create-only --preview-feature",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev --preview-feature",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate dev --preview-feature",
    "db:migrate:prod": "prisma migrate deploy --preview-feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crossroads/api.goodchat.git"
  },
  "keywords": [
    "omnichannel",
    "crossroads",
    "chat",
    "goodcity"
  ],
  "author": "Crossroads Foundation",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/crossroads/api.goodchat/issues"
  },
  "homepage": "https://github.com/crossroads/api.goodchat#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/i18n": "^0.12.0",
    "@types/ioredis": "^4.19.3",
    "@types/js-yaml": "^3.12.5",
    "@types/koa": "^2.11.5",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa__router": "^8.0.3",
    "@types/lodash": "^4.14.162",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.22",
    "@types/require-dir": "^1.0.1",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@types/sunshine-conversations-client": "git://github.com/patrixr/types-sunshine-conversations-client.git#master",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "doctoc": "^2.0.0",
    "mocha": "^8.2.0",
    "ngrok": "^3.3.0",
    "nyc": "^15.1.0",
    "prisma": "^2.17.0",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "supertest": "^5.0.0",
    "supertest-koa-agent": "^0.3.2",
    "ts-node-dev": "^1.0.0",
    "tsc-watch": "^4.2.9",
    "typedoc": "^0.20.18",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@koa/router": "^9.4.0",
    "@prisma/client": "^2.17.0",
    "axios": "^0.21.1",
    "debug": "^4.2.0",
    "dotenv-cli": "^4.0.0",
    "i18n": "^0.13.2",
    "ioredis": "^4.19.4",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "lodash": "^4.17.20",
    "lodash-patterns": "^1.1.6",
    "redis": "^3.0.2",
    "require-dir": "^1.2.0",
    "sunshine-conversations-client": "^9.0.1"
  }
}
