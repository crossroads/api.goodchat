{
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r", "ts-node/register", "--file", "specs/spec_helpers/setup.ts", "'specs/**/*.spec.ts'"
      ],
      "envFile": "${workspaceFolder}/.env.test",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.spec.json"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r", "ts-node/register", "--file", "specs/spec_helpers/setup.ts", "${file}"
      ],
      "envFile": "${workspaceFolder}/.env.test",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.spec.json"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": [
        "${workspaceFolder}/bin/serve.ts"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/.envrc",
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "DEBUG": "*:info,*:error,*:verbose,*:panic,*:shout",
        "DEBUG_COLORS": "true",
        "NODE_ENV": "development"
      }
    }
  ]
}
